<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <appSettings>
    <!-- Webhook endpoint URL -->
    <add key="WebhookEndpoint" value="https://etl.saris.info.tz/api/webhook/ngorongoro-quickbook" />
    
    <!-- Polling interval in minutes -->
    <add key="PollingIntervalMinutes" value="5" />
    
    <!-- QuickBooks connection settings -->
    <add key="QuickBooksAppName" value="QuickBooks ETL Service" />
    <add key="QuickBooksAppID" value="YourAppID" />
    <add key="QuickBooksCompanyFile" value="" />
    
    <!-- HTTP settings -->
    <add key="HttpTimeoutSeconds" value="30" />
    <add key="MaxRetryAttempts" value="3" />
    <add key="RetryDelaySeconds" value="5" />
    
    <!-- Logging settings -->
    <add key="LogLevel" value="Information" />
    <add key="LogToFile" value="true" />
    <add key="LogFilePath" value="C:\Logs\QuickBooksETL" />
  </appSettings>
</configuration>
